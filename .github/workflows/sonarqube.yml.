name: SonarCloud Analysis

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  sonarqube:
    name: SonarCloud Scan
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository
      - name: Checkout code
        uses: actions/checkout@v3

      # Set up JDK 11 (required by SonarCloud)
      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'

      # Cache Gradle dependencies
      - name: Cache Gradle
        uses: actions/cache@v3
        with:
          path: |
            ~/.gradle/caches
            ~/.gradle/wrapper
          key: gradle-${{ runner.os }}-${{ hashFiles('**/*.gradle*', '**/gradle-wrapper.properties') }}
          restore-keys: |
            gradle-${{ runner.os }}

      # Grant Gradle Wrapper execute permissions
      - name: Make Gradle Wrapper executable
        run: chmod +x ./gradlew

      # Build the project
      - name: Build project
        run: ./gradlew build

      # Run SonarCloud analysis
      - name: SonarCloud Scan
        env:
          SONAR_TOKEN: "e0ed971a0b8fa239e2b724e59eec541cb0cbbbd8"
        run: ./gradlew sonarqube -Dsonar.projectKey=<your-sonarcloud-project-key> -Dsonar.organization=<your-sonarcloud-organization>

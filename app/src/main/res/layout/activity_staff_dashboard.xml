<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grid layout for cards -->
    <GridLayout
        android:id="@+id/dashboardGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Health card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/healthCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardElevation="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_health_icon"
                android:contentDescription="Health Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Production card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/productionCard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_production_icon"
            android:contentDescription="Production Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Production"
            android:textSize="16sp"
            android:paddingTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Settings card -->
<androidx.cardview.widget.CardView
android:id="@+id/settingsCard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="16dp">

<ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/ic_settings_icon"
    android:contentDescription="Settings Icon" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Settings"
    android:textSize="16sp"
    android:paddingTop="8dp" />
</LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Maintenance card -->
<androidx.cardview.widget.CardView
android:id="@+id/maintenanceCard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="16dp">

<ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/ic_maintenance_icon"
    android:contentDescription="Maintenance Icon" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Maintenance"
    android:textSize="16sp"
    android:paddingTop="8dp" />
</LinearLayout>
    </androidx.cardview.widget.CardView>

    </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

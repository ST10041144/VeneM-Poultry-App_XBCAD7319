<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F6F5F5"
    tools:context=".HealthActivity">

    <!-- Ongoing Medication Regimens Card -->
    <LinearLayout
        android:id="@+id/medicationCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ongoing_medication_regiments"
            android:textColor="#0A70C1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/medicationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/valuntion_vaccination"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/medicationDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/_26_dec"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Monitored Flock Batches Card -->
    <LinearLayout
        android:id="@+id/flockBatchesCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monitored_flock_batches"
            android:textColor="#0A70C1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Batch A -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/batchATextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/batch_a"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/medicationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/valuntion"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Batch B -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/batchBTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/batch_b"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/ozempic"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextCheckupCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_checkup_dates"
            android:textColor="#0A70C1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/nextCheckupBatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/batch_a"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nextCheckupDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/_26_dec"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Vaccinations and Medication Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Vaccinations Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/vaccinationsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundedd_button"
            android:cardElevation="8dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/vaccine"
                    android:tint="#FFA500"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vaccine"
                    android:textColor="#0A70C1"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Medication Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/medicationCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/roundedd_button"
            android:cardElevation="8dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/vaccine"
                    android:tint="#FFA500"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medication"
                    android:textColor="#0A70C1"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
